            "url": {
              "raw": "{{base_url}}/docs",
              "host": ["{{base_url}}"],
              "path": ["docs"]
            },
            "description": "Interactive API documentation (Swagger UI)"
          },
          "response": []
        },
        {
          "name": "OpenAPI JSON",
          "request": {
            "method": "GET",
